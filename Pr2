using System;

public class Pr2
{
    static void Main()
    {
        int[] nums = { 5, 15, 25 };
        Console.WriteLine("Numbers from interval 1-16: \n");
        foreach (int num in nums)
        {
            if (num <= 16)
            {
                Console.WriteLine(num);
            }
        }
    }
}

