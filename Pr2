3)
using System;

public class Pr2
{
    static void Main()
    {
        int[] x = new int[16];
        Random ran = new Random(); for (int i = 0; i < x.Length; i++)
        {
            x[i] = ran.Next(100);
        }
        int min = x[0]; int max = x[0];

        for (int i = 1; i < x.Length; i++)
        {
            if (x[i] < min)
            {
                min = x[i];
            }
            if (x[i] > max)
            {
                max = x[i];
            }
        }
        Console.WriteLine("Array x: \n");
        foreach (int num in x)
        {
            Console.WriteLine(num + " ");
        }
        Console.WriteLine(); Console.WriteLine($"Min num in array: {min} \n");
        Console.WriteLine($"Max num in array: {max}");

    }
}

