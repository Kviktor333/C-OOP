4)
using System;

public class Pr2
{
    static void Main()
    {
        int[] x = { -15, -9, -7, -4, -2, -1, 0, 3, 5, 6, 8, 9, 12, 15, 16, 20 };
        Console.WriteLine("Enter num M:");

        int m = Convert.ToInt32(Console.ReadLine()); int[] y = new int[x.Length];
        int count = 0;
        for (int i = 0; i < x.Length; i++)
        {
            if (Math.Abs(x[i]) > m)
            {
                y[count] = x[i]; count++;
            }
        }

        Console.WriteLine($"Number N: {m} \n"); Console.WriteLine("Array x:");
        PrintArr(x); Console.WriteLine("Array y:");
        PrintArr(y, count);
    }

    static void PrintArr(int[] arr, int length = -1)
    {
        if (length == -1)
        {
            length = arr.Length;
        }
        for (int i = 0; i < length; i++)
        {
            Console.WriteLine(arr[i] + " ");
        }
        Console.WriteLine();
    }
}
