2)
using System;

public class Pr2
{
    static void Main()
    {
        Console.WriteLine("Trianle ABC \n");

        Console.WriteLine("Enter AB length:");
        double ab = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("Enter BC length:");
        double bc = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("Enter AC length:");
        double ac = Convert.ToDouble(Console.ReadLine());

        double per = ab + bc + ac;
        double s = per / 2;
        double S = Math.Sqrt(s * (s - ab) * (s - bc) * (s - ac));
        Console.WriteLine($"Perimetr is: {per}");
        Console.WriteLine($"Square is: {S}");

        if (ab == bc && bc == ac && ab == ac)
        {
            Console.WriteLine("Triangle is equilateral");
        }
        else if (ab == bc && bc != ac && ab != ac || ab != bc && bc == ac && ab != ac || ab != bc && bc != ac && ab == ac)
        {
            Console.WriteLine("Triangle is isosceles");
        }
          else
        {
            Console.WriteLine("Triangle is scalene");
        }
    }
}

